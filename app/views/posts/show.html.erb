<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<script type="text/javascript">
function initialize() {
	handler = Gmaps.build('Google');
	handler.buildMap({ provider: {}, internal: {id: 'mapShow'}}, function(){
	  markers = handler.addMarkers(<%= raw @hash.to_json %>);
	  handler.bounds.extendWith(markers);
	  handler.fitMapToBounds();
	});
}
</script>
<%= link_to 'Back', posts_path %>

<div id="onePost" class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-default">
			<div class="panel-heading center">
				<%= image_tag @post.image.url(:large) %>
			</div>
			<div class="show panel-body">
				<p><%= @post.description %></p>
				<p><strong><%= @post.user.user_name if @post.user %></strong></p>
				<input type="button" class="button" value="Show on map" onclick="initialize()";>
				<div style='width: 70%; background-color: white'>
				  <div id="mapShow" class="show" style='width: 100%; height: 400px;'></div>
				</div>
				<script>initialize();</script>

				<% if current_user && @post.user == current_user %>
					<%= link_to edit_post_path(@post) do %>
				        <span class="glyphicon glyphicon-edit"></span>
				        Edit
			      	<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>


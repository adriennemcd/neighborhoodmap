<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>
<%= yield :scripts %>

<script type="text/javascript">
function initialize() {
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    var marker, i, _len;
    var json_array = <%= raw @hash.to_json %>;
    markers = handler.addMarkers(json_array);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    
  });
};

function filter( oSelect ) {
  var selectedValue = oSelect.options[ oSelect.selectedIndex ].value;
  // alert(selectedValue);
}

function filterQ(selected_Q) {
  jQuery("#posturl").load("/posts?question_id=" + selected_Q, function() {
    alert("Load was performed");
  });
}
</script>
<input type="hidden" id="refreshed" value="no">

<%= render 'pages/home' unless user_signed_in? %>
<div class="panel panel-default">
<div id="map" class="center" style='width: 100%; height: 400px; background-color: white;'></div>
<% content_for :scripts do %>
  <script type="text/javascript">
    initialize();
  </script>
<% end %>
</div>
<div id="posturl" style="width: 100%; height: 400px; background-color:white;">
  <h5>Filter the Markers by Question</h5>
  <%= select('post','question_id', Question.all.collect {|q|[q.id] }, {include_blank: 'None'}, :onchange => "filterQ(this.value)") %><br />
    <% @postFilter1.each do |post| %>
      <%= post.question.description %><br />
      <%= post.description %><br />
      <%= post.user.user_name %><br />
    <% end %>

</div>
<br />
<h4>Recent Posts on the Map</h4>
<div class="posts transitions-enabled">
  <% @posts.each do |post| %>
    <div class="box panel panel-default"> 
      <%= link_to image_tag(post.image.url(:medium)), post %>
      <div class="panel-body">    
        <strong><%= post.question.description %></strong><br />
        <%= post.description.truncate(53) %><br />
        <strong><%= post.user.user_name if post.user %></strong>
        <% if current_user && post.user == current_user %>
          <div class="actions">
            <%= link_to edit_post_path(post) do %>
                <span class="glyphicon glyphicon-edit"></span>
                Edit
            <% end %>
            <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-trash"></span>
                Delete
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>





